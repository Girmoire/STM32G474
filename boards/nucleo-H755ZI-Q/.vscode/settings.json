{
    // STM32CubeCLT toolchain paths
    "cmake.cmakePath": "C:/ST/STM32CubeCLT_1.18.0/CMake/bin/cmake.exe",
    "cmake.generator": "Ninja",
    
    // CMake configuration settings
    "cmake.configureSettings": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BOARD": "nucleo-H755ZI-Q",
        "CMAKE_MAKE_PROGRAM": "C:/ST/STM32CubeCLT_1.18.0/CMake/bin/ninja.exe"
    },
    
    // Build settings
    "cmake.buildArgs": ["-j", "10"],
    "cmake.buildDirectory": "${workspaceFolder}/build",
    
    // Configure CMake to always use the presets
    "cmake.useCMakePresets": "always",
    
    // IntelliSense configuration for ARM GCC
    "C_Cpp.default.compilerPath": "C:/ST/STM32CubeCLT_1.18.0/GNU-tools-for-STM32/bin/arm-none-eabi-gcc.exe",
    "C_Cpp.default.intelliSenseMode": "gcc-arm",
    
    // Terminal settings for tasks
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "terminal.integrated.env.windows": {
        "PATH": "C:/ST/STM32CubeCLT_1.18.0/CMake/bin;C:/ST/STM32CubeCLT_1.18.0/GNU-tools-for-STM32/bin;C:/ST/STM32CubeCLT_1.18.0/OpenOCD/bin;${env:PATH}"
    },
    
    // File associations
    "files.associations": {
        "*.h": "c",
        "*.c": "c",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "*.ld": "linkerscript",
        "*.s": "arm"
    },
    
    // Exclude unnecessary files from explorer
    "files.exclude": {
        "**/build": true,
        "**/cmake-build-*": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true
    },
    
    // Search exclude patterns
    "search.exclude": {
        "**/build": true,
        "**/cmake-build-*": true,
        "**/Drivers": true,
        "**/Middlewares": true
    }
}